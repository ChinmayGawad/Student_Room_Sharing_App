<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E1E1"
    tools:context=".Login">

    <ImageView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_x="120dp"
        android:layout_y="42dp"
        android:background="@drawable/logo" />


    <TextView
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:layout_x="128dp"
        android:layout_y="202dp"
        android:text="SHARE"
        android:textColor="#D33333"
        android:textSize="45dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:layout_x="144dp"
        android:layout_y="244dp"
        android:text="ROOM"
        android:textColor="#D33333"
        android:textSize="40dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="349dp"
        android:layout_height="302dp"
        android:layout_x="30dp"
        android:layout_y="317dp"
        android:backgroundTint="#D33333"
        app:cardCornerRadius="16dp"
        app:cardElevation="15dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/UsernameLayout"
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="40dp"
            android:background="#E6E1E1"
            android:hint="@string/username"
            android:textColorHint="@color/black"
            android:inputType="textEmailAddress"
            app:boxStrokeColor="#0C0C0C">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/UsernameEt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableEnd="@drawable/ic_user"
                android:backgroundTint="#E6E1E1"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/passwordTextInputLayout1"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="110dp"
            android:background="#E6E1E1"
            android:hint="@string/password"
            android:textColorHint="@color/black"
            android:inputType="textPassword"
            app:passwordToggleEnabled="false"
            tools:ignore="UnknownId">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/PasswordEt"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                tools:ignore="VisualLintTextFieldSize,TextContrastCheck" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/forgetPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="170dp"
            android:text="@string/forgot_password"
            android:textColor="#040303" />

        <Button
            android:id="@+id/buttonLogin"
            android:layout_width="258dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="210dp"
            android:background="@drawable/button_curve"
            android:text="@string/login" />

        <TextView
            android:id="@+id/CreateAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="270dp"
            android:text="@string/create_account"
            android:textColor="@color/black" />
    </androidx.cardview.widget.CardView>


</AbsoluteLayout>