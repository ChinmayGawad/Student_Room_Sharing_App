<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/card_padding">





       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="190dp"
           android:layout_marginLeft="20dp"
           android:layout_marginRight="20dp"
           app:cardBackgroundColor="#B4D3ED"
           app:cardCornerRadius="15dp">


           <AbsoluteLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

           <ImageView
               android:id="@+id/room_image"
               android:layout_width="200dp"
               android:layout_height="150dp"
               android:layout_y="10dp"
               android:layout_x="1dp"
               android:scaleType="fitXY"
               android:padding="@dimen/card_corner_radius"
               android:contentDescription="Images of rooms" />

           <TextView
               android:id="@+id/room_title"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_x="220dp"
               android:layout_y="20dp"
               android:textSize="20sp"
               android:textColor="@color/black"
               android:layout_marginTop="@dimen/item_margin"

               android:textStyle="bold" />

           <TextView
               android:id="@+id/roomAddress"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/black"
               android:layout_x="220dp"
               android:layout_y="50dp"
               android:textSize="20sp"
               android:maxLines="2" />

           <TextView
               android:id="@+id/room_rent"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/black"
               android:layout_x="220dp"
               android:textSize="20sp"
               android:layout_y="80dp"/>

           <TextView
               android:id="@+id/room_description"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/black"
               android:layout_x="220dp"
               android:layout_y="110dp"
               android:textSize="20sp"
               android:maxLines="2" />

           </AbsoluteLayout>

       </androidx.cardview.widget.CardView>



</AbsoluteLayout>
