<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilePage"
    android:background="@drawable/prof">

    <TextView
        android:id="@+id/ProfileName"
        android:layout_width="272dp"
        android:layout_height="54dp"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:hint="Your Profile"
        android:textSize="50dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="72dp" />

    <TextView
        android:id="@+id/ProfileUserName"
        android:layout_width="272dp"
        android:layout_height="54dp"
        android:layout_marginTop="184dp"
        android:hint="@string/name"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="72dp" />

    <TextView
        android:id="@+id/ProfileEmailId"
        android:layout_width="273dp"
        android:layout_height="45dp"
        android:layout_marginTop="35dp"
        android:hint="@string/email_id"
        app:layout_constraintTop_toBottomOf="@+id/ProfileUserName"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="69dp" />

    <TextView
        android:id="@+id/ProfilePhoneNo"
        android:layout_width="273dp"
        android:layout_height="45dp"
        android:layout_marginTop="35dp"
        android:hint="@string/phone_number"
        app:layout_constraintTop_toBottomOf="@+id/ProfileEmailId"
        tools:layout_editor_absoluteX="71dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/ProfileAadharNo"
        android:layout_width="273dp"
        android:layout_height="45dp"
        android:layout_marginTop="35dp"
        android:hint="@string/aadhar_card_no"
        app:layout_constraintTop_toBottomOf="@+id/ProfilePhoneNo"
        tools:layout_editor_absoluteX="69dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/ProfileGender"
        android:layout_width="273dp"
        android:layout_height="45dp"
        android:layout_marginTop="35dp"
        android:hint="@string/gender"
        app:layout_constraintTop_toBottomOf="@+id/ProfileAadharNo"
        tools:layout_editor_absoluteX="71dp"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>

