<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/final_white"
    android:padding="16dp">


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="150dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="15dp">


        <RelativeLayout
            android:layout_width="360dp"
            android:layout_height="490dp"
            android:background="@color/White"
            android:backgroundTint="#D33333"
            tools:ignore="ExtraText">
            >


            <EditText
                android:id="@+id/editTextOwnerEmail"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="110dp"
                android:background="@color/final_white"
                android:hint="Email"
                android:minHeight="48dp"
                android:padding="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black" />

            <EditText
                android:id="@+id/editTextOwnerPassword"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/editTextOwnerEmail"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@color/final_white"
                android:hint="Password"
                android:inputType="textPassword"
                android:minHeight="48dp"
                android:padding="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black" />

            <EditText
                android:id="@+id/editTextOwnerConfirmPassword"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/editTextOwnerPassword"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@color/final_white"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:minHeight="48dp"
                android:padding="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black" />


            <Button
                android:id="@+id/buttonRegisterOwner"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/editTextOwnerConfirmPassword"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:padding="15dp"
                android:background="@drawable/button_curve"
                android:text="Register Owner" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:text="Sign Up"
        android:textColor="#D33333"
        android:textSize="50dp"
        android:textStyle="bold"/>


</RelativeLayout>
